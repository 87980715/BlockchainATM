extend ../blockchainInfo
block content
    .container
        .row
            table.table.table-hover.table-bordered.span6
                thead
                    tr.active
                        th 区块号
                        th 时间戳
                        th 交易类型
                        th 交易数额
                        th 扣款区块链账户所属用户
                        th 扣款区块链账户
                        th 收款区块链账户所属用户
                        th 收款区块链账户
                        th 状态
                    tbody
                        each item in transactions
                            tr
                                td #{item.blockNo}
                                td #{moment(item.time).format('YYYY-MM-DD HH:mm:ss')}
                                td #{item.type}
                                td #{item.amount}
                                td #{item.debitAccount}
                                td #{item.fromAccount}
                                td #{item.creditAccount}
                                td #{item.toAccount}
                                td #{item.status}